---
import {MessageCircleMore, Info, BadgeCheck, Star, MoveDown } from '@lucide/astro';
---

<section id="inicio" class="relative min-h-screen bg-soft overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0">
    <div class="absolute top-20 right-20 w-80 h-80 bg-primary/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-96 h-96 bg-secondary/5 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-accent/3 rounded-full blur-2xl"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-6 lg:px-8 pt-20 pb-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center min-h-[80vh]">
      
      <!-- Contenido de texto -->
      <div class="space-y-8 text-center lg:text-left">
        <!-- Badge de credibilidad -->
        <div class="inline-flex items-center space-x-2 bg-white/80 backdrop-blur-sm rounded-full px-4 py-2 shadow-sm border border-gray-100">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gray-700">Disponible para nuevos pacientes</span>
        </div>

        <!-- Título principal -->
        <div class="space-y-4">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            Bienvenido a la
            <span class="block text-primary">Transformación</span>
            <span class="block text-secondary">Cuántica</span>
          </h1>
          
          <p class="text-lg md:text-xl text-gray-600 leading-relaxed max-w-xl mx-auto lg:mx-0">
            Explora cómo Carolina Trujillo, psicóloga cuántica, te ayuda 
            a transformar tu vida a través de enfoques holísticos y 
            técnicas innovadoras de sanación.
          </p>
        </div>

        <!-- Botones de acción -->
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start space-y-4 sm:space-y-0 sm:space-x-4">
          <a href="#contacto" class="w-full sm:w-auto bg-secondary text-white px-8 py-4 rounded-xl font-semibold hover:bg-pink-600 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 flex items-center justify-center space-x-2">
            <MessageCircleMore class="w-5 h-5">
            <span>Contáctanos</span>
          </a>
          
          <a href="/servicios" class="w-full sm:w-auto bg-white text-primary border-2 border-primary px-8 py-4 rounded-xl font-semibold hover:bg-primary hover:text-white hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 flex items-center justify-center space-x-2">
            <Info class="w-5 h-5" />
            <span>Conocer Más</span>
          </a>
        </div>

        <!-- Estadísticas de confianza -->
        <div class="grid grid-cols-3 gap-6 pt-8 border-t border-gray-200">
          <div class="text-center">
            <div class="text-2xl md:text-3xl font-bold text-primary mb-1">500+</div>
            <div class="text-sm text-gray-600">Vidas Transformadas</div>
          </div>
          <div class="text-center">
            <div class="text-2xl md:text-3xl font-bold text-primary mb-1">10+</div>
            <div class="text-sm text-gray-600">Años de Experiencia</div>
          </div>
          <div class="text-center">
            <div class="text-2xl md:text-3xl font-bold text-primary mb-1">98%</div>
            <div class="text-sm text-gray-600">Satisfacción</div>
          </div>
        </div>
      </div>

      <!-- Imagen y card profesional -->
      <div class="relative flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Círculo decorativo de fondo -->
          <div class="absolute inset-0 w-80 h-80 md:w-96 md:h-96 bg-gradient-to-br from-primary/10 via-secondary/10 to-accent/10 rounded-full transform rotate-6"></div>
          
          <!-- Imagen principal -->
          <div class="relative w-80 h-80 md:w-96 md:h-96 rounded-full overflow-hidden shadow-2xl border-8 border-white">
            <img 
              src="img/carolina-trujillo.jpg" 
              alt="Carolina Trujillo - Psicóloga Cuántica"
              class="w-full h-full object-cover"
            />
          </div>

          <!-- Card flotante de información -->
          <div class="absolute -bottom-6 -left-6 bg-white rounded-2xl p-6 shadow-xl border border-gray-100 max-w-xs">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 gradient-soft rounded-xl flex items-center justify-center flex-shrink-0">
                <BadgeCheck class="text-white" />
              </div>
              <div>
                <h3 class="font-bold text-gray-900 mb-1">Psicóloga Certificada</h3>
                <p class="text-sm text-gray-600 mb-2">MP-12345 • 10+ años</p>
                <div class="flex items-center text-xs text-warm">
                  <Star class="w-3 h-3 mr-1" fill="currentColor" />
                  <span>Especialista en Cuántica</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Elementos decorativos flotantes -->
          <div class="absolute top-4 right-4 w-4 h-4 bg-warm rounded-full animate-pulse"></div>
          <div class="absolute bottom-1/3 -right-4 w-6 h-6 bg-accent/20 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
          <div class="absolute top-1/3 -left-4 w-3 h-3 bg-secondary/30 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#beneficios" class="flex flex-col items-center text-gray-400 hover:text-primary transition-colors duration-300">
        <span class="text-sm font-medium mb-2">Explorar</span>
        <MoveDown class="w-6 h-6" />
      </a>
    </div>
  </div>
</section>