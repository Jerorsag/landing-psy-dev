---
import "../../styles/global.css"
import {Star, Lightbulb, Mail, MapPin, Instagram } from '@lucide/astro';
---

<footer class="bg-soft border-t border-gray-200">
  <div class="max-w-6xl mx-auto px-6 lg:px-8 py-16">

    <!-- Main Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      
      <!-- Certificaciones -->
      <div class="text-center md:text-left">
        <h3 class="text-lg font-bold text-gray-900 mb-6">Credenciales</h3>
        <div class="space-y-4">
          <div class="bg-white rounded-xl p-4 border border-gray-100 hover:border-primary/20 hover:shadow-md transition-all duration-300">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-warm/10 rounded-lg flex items-center justify-center">
                <Star class="w-4 h-4 text-warm" fill="currentColor" />
              </div>
              <div>
                <p class="font-semibold text-gray-900">Psicóloga Certificada</p>
                <p class="text-sm text-gray-600">Reg. MP-12345</p>
              </div>
            </div>
          </div>
          <div class="bg-white rounded-xl p-4 border border-gray-100 hover:border-primary/20 hover:shadow-md transition-all duration-300">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
                <Lightbulb class="w-5 h-5 text-primary" />
              </div>
              <div>
                <p class="font-semibold text-gray-900">Coach Cuántico</p>
                <p class="text-sm text-gray-600">10+ Años Experiencia</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Enlaces -->
      <div class="text-center">
        <h3 class="text-lg font-bold text-gray-900 mb-6">Enlaces Útiles</h3>
        <div class="space-y-3">
          <a href="#beneficios" class="block text-gray-600 hover:text-primary font-medium transition-colors duration-300">
            Beneficios
          </a>
          <a href="#servicios" class="block text-gray-600 hover:text-primary font-medium transition-colors duration-300">
            Servicios
          </a>
          <a href="#proceso" class="block text-gray-600 hover:text-primary font-medium transition-colors duration-300">
            Proceso
          </a>
          <a href="#testimonios" class="block text-gray-600 hover:text-primary font-medium transition-colors duration-300">
            Testimonios
          </a>
          <a href="#contacto" class="block text-gray-600 hover:text-primary font-medium transition-colors duration-300">
            Contacto
          </a>
        </div>
      </div>

      <!-- Contacto -->
      <div class="text-center md:text-right">
        <h3 class="text-lg font-bold text-gray-900 mb-6">Contacto</h3>
        
        <!-- Info de contacto -->
        <div class="space-y-4 mb-6">
          <div class="flex items-center justify-center md:justify-end space-x-3 text-gray-600">
            <Mail class="w-5 h-5 text-primary"/>
            <span class="font-medium">hola@carolinatrujillo.com</span>
          </div>
          <div class="flex items-center justify-center md:justify-end space-x-3 text-gray-600">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            <span class="font-medium">+57 311 301 4769</span>
          </div>
          <div class="flex items-center justify-center md:justify-end space-x-3 text-gray-600">
            <MapPin class="w-5 h-5 text-primary" />
            <span class="font-medium">Cali, Colombia</span>
          </div>
        </div>

        <!-- Redes sociales elegantes -->
        <div class="flex justify-center md:justify-end space-x-4 mb-6">
          <!-- Instagram -->
          <a href="#" class="w-10 h-10 bg-white border border-gray-200 rounded-lg flex items-center justify-center text-gray-600 hover:text-primary hover:border-primary/30 hover:shadow-md transition-all duration-300">
            <Instagram class="w-5 h-5" />
          </a>
          
          <!-- TikTok -->
          <a href="#" class="w-10 h-10 bg-white border border-gray-200 rounded-lg flex items-center justify-center text-gray-600 hover:text-primary hover:border-primary/30 hover:shadow-md transition-all duration-300">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
            </svg>
          </a>
          
          <!-- Twitter (X) -->
          <a href="#" class="w-10 h-10 bg-white border border-gray-200 rounded-lg flex items-center justify-center text-gray-600 hover:text-primary hover:border-primary/30 hover:shadow-md transition-all duration-300">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>

          <!-- CTA Final -->
          <a href="#contacto" class="inline-block bg-secondary text-white px-6 py-3 rounded-xl font-semibold hover:bg-pink-600 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300">
            Agenda tu Consulta
          </a>
      </div>
    </div>

    <!-- Estadísticas discretas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 pt-8 border-t border-gray-200">
      <div class="text-center">
        <div class="text-2xl font-bold text-primary mb-1">500+</div>
        <div class="text-sm text-gray-600">Personas Transformadas</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-primary mb-1">10+</div>
        <div class="text-sm text-gray-600">Años de Experiencia</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-primary mb-1">98%</div>
        <div class="text-sm text-gray-600">Satisfacción</div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="border-t border-gray-200 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-500 text-sm">
          © 2025 Carolina Trujillo. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="#" class="text-gray-500 hover:text-primary transition-colors duration-300">Privacidad</a>
          <a href="#" class="text-gray-500 hover:text-primary transition-colors duration-300">Términos</a>
          <a href="#" class="text-gray-500 hover:text-primary transition-colors duration-300">Cookies</a>
        </div>
      </div>
    </div>
  </div>
</footer>